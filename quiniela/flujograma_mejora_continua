// Modelo de Mejora Continua
digraph Flujograma {
	dpi=300 rankdir=LR size="12,6"
	node [fontname=Arial shape=box style=filled]
	Inicio [label=Inicio fillcolor=lightblue shape=oval]
	Analizar [label=Analizar fillcolor=lightgreen]
	Comunicar [label=Comunicar fillcolor=lightcoral]
	Decidir [label=Decidir fillcolor=lightyellow shape=diamond]
	Implementar [label=Implementar fillcolor=lightpink]
	Medir [label=Medir fillcolor=lightgrey]
	Fin [label=Fin fillcolor=lightblue shape=oval]
	Inicio -> Analizar
	Analizar -> Comunicar
	Comunicar -> Decidir
	Decidir -> Implementar [label=Aprobado]
	Implementar -> Medir
	Medir -> Analizar [label="Ciclo continuo"]
	Medir -> Fin [label="Proceso completado"]
}
